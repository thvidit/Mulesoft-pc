    <munit:config name="munit" doc:name="MUnit configuration"/>
    <spring:beans>
        <spring:import resource="classpath:cafe.xml"/>
    </spring:beans>
    
    <munit:test name="TestBreakfastFlow" description="Test">
        <munit:set payload="#['']" doc:name="Set HTTP query params">
    		<munit:inbound-properties>
        		<munit:inbound-property key="http.query.params" value="#[['meal': 'breakfast']]"/>
    		</munit:inbound-properties>
		</munit:set>
        <logger level="INFO" doc:name="Logger"/>
        <flow-ref name="GetMeals" doc:name="Flow Reference"/>
        <logger message="munit payload is: #[flowVars.var]" level="INFO" doc:name="Logger"/>
        <munit:assert-on-equals expectedValue="#[payload]" actualValue="#[flowVars.var]" doc:name="Assert Equals"/>
    </munit:test>
    <munit:test name="TestLunchFlow" description="Test">
        <munit:set payload="#['']" doc:name="HTTP query params">
